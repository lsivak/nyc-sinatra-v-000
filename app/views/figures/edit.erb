<h1>Update Figure</h1>

<form action="/figures/<%=@figure.id%>" method="POST">
  <input type="hidden" name="_method" value="patch">

  <label>Figure Name:</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"></input>
  <br>
  <label>Choose Figure Title:</label>
  <% Title.all.each do |title| %>
  <input type="checkbox" name="figure[title_ids][]" id="<%= title.name %>" value="<%=title.id%>"<%='checked' if @figure.titles.include?(title) %>><%=title.name%></input>
  <%end%>
  <br>
  <label>Create New Title:</label>
  <input type="text" name="title[name]" id="new_title" ></input></br>


  <label>Choose Landmark Name:</label>
  <% Landmark.all.each do |landmark| %>
  <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="<%= landmark.name %>"<%='checked' if @figure.landmarks.include?(landmark) %>><%=landmark.name%></input>
  <%= landmark.year_completed %><br>
  <% end %>
  <label>Create New Landmark:</label><br>
  <label>New Landmark Name:</label>
  <input type="text" name="landmark[name]" id="new_landmark" ><br>
  <label>New Year_Completed:</label>
  <input type="text" name="landmark[year_completed]" id="year_completed" ><br>
  <br>

  <input type="submit" value="Edit Figure">
