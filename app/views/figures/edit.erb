<h1>Update Figure</h1>

<form action="/figures/<%=@figure.id%>" method="POST">
  <input type="hidden" name="_method" value="PATCH">

    <label>Figure Name:</label>
    <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"></input>
    <br></br>

    <label>Figure Title:</label>
    <% Title.all.each do |title| %>
    <input id="<%= title.name %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>"><%='checked' if @figure.titles.include?(title) %>></input>

    <br></br>

    <label>Landmark Name:</label>
    <% Landmark.all.each do |landmark| %>
    <input id="<%= landmark.name %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>"><%='checked' if @figure.landmarks.include?(landmark) %>></input>
    <% end %>
    <br></br>

    <input type="submit" value="Update Figure">
