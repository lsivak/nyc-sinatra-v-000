  <form action="/figures" method="POST">

    <label>Figure Name:</label>
    <input type="text" name="figure[name]" id="figure_name"></input>
    <br>
    <label>Choose Figure Title:</label>
    <% Title.all.each do |title| %>
    <input type="checkbox" name="title_ids[]" id="<%= title.name %>"><%=title.name%>
  <%end%>
<br>
<br>
    <label>Create New Title:</label>
    <input type="text" name="title[name]" id="new_title" ></input></br>

    <br>
    <label>Landmark Name:</label>
    <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="<%= landmark.id %>" value="<%=landmark.id%>"><%=landmark.name%></input><br>
    <label>Year Completed:</label>
    <p><%= landmark.year_completed %></p>

    <br>

    <label>AND/OR Create New Landmark:</label><br>
    <label>New Landmark Name:</label>
      <input type="text" name="new_landmark[name]" id="new_landmark" >
      <label>New Year_Completed:</label>
        <input type="text" name="landmark[year_completed]" id="year_completed" >
      <input type="submit" value="Create New Figure">
<% end %>
    </form>
