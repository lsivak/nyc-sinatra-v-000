  <form action="/figures" method="POST">

    <label>Figure Name:</label>
    <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"></input> </br>

    <label>Titles:</label>
    <% Title.all.each do |title| %>
    <input id="<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>"></input><br>

    <label>Create New Title:</label>
    <input type="text" id="new_title" name="title[name]">

    <label>Landmark Name:</label>
    <% Landmark.all.each do |landmark| %>
    <input id="<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>"></input><br>
    <% end %>
    <label><Create New Landmark:></label>
      <input type="text" id="new_landmark" name="landmark[name]">

      <input type="submit" value="Create New Figure">
    </form>
